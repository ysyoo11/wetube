mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=video.src)
        .videoPlayer__controls
            .videoPlayer__column
                input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.1", value="0.5")
                span#jsVolumeBtn
                    i.fas.fa-volume-up
                span.videoPlayer__time
                    span#jsCurrentTime 00:00:00
                    span /
                    span#jsTotalTime 00:00:00
            .videoPlayer__column
                span#jsBackwardButton
                    i.fas.fa-angle-double-left
                span#jsPlayButton
                    i.fas.fa-play
                span#jsForwardButton
                    i.fas.fa-angle-double-right
            .videoPlayer__column
                progress#jsProgressBar(min='0', max='100', value='0') 0% played
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand