extends layouts/main

block content
    .form-container
        form(action=routes.editVideo(video.id), method="post")
            span Title:
            input.edit-title(type="text", placeholder="Title", name="title", value=video.title)
            span Description:
            textarea.edit-description(name="description", placeholder="Description")=video.description
            input(type="submit", value="Update Video")
        a.form-container__link(href=routes.deleteVideo(video.id))
            button.delete Delete Video